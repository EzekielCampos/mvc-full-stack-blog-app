<div class='container mt-5'>

  <div class='card'>
    <div
      class='card-header d-flex justify-content-between align-items-center'
      style='height: 50px;'
    >
      <h5 class='mb-0'>{{title}} </h5>
      <small>Posted by {{user.name}} on {{format_date date_created}}</small>
    </div>
    <div class='card-body fs-1' style='height: 100px;'>
      <p class='card-text'> {{description}}</p>
      {{! <button class="btn btn-primary" id="comm-btn" onclick="location.href='/'">Comment</button> }}
    </div>
  </div>
</div>

<div class='container'>
  <div class='justify-content-center'>
    <div class='comment-form mt-4'>

      <form id='comment-frm' data-id ="{{id}}">
        <div class='form-group mx-auto col-9'>
          <textarea
            class='form-control'
            id="user-comment"
            rows='3'
            placeholder='Write your comment here...'
            required
          ></textarea>
        </div>
        <div class='d-grid gap-2 col-3 mx-auto mt-4'>
          <button type='submit' id='update-btn' class='btn btn-primary'>Submit</button>
          <button
            id='delete-btn'
            class='btn btn-primary'
            onclick="location.href='view/post/{{id}}'"
          >Cancel</button>

        </div>
      </form>
    </div>

  </div>
</div>


<script src="./js/comment.js" defer></script>